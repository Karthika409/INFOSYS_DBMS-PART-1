CREATE TABLE ARTICLE(
    ArCode CHAR(5) CONSTRAINT ARTICLE_ArCode_PK PRIMARY KEY,
    CHECK(ArCode LIKE 'A%'),
    ArName VARCHAR2(30) CONSTRAINT ARTICLE_ArName_NN NOT NULL,
    Rate NUMBER(8,2),
    Quantity NUMBER(4) DEFAULT 0,
    CHECK(Quantity >=0),
    Class CHAR(1) CONSTRAINT ARTICLE_Class_CK CHECK(Class IN('A', 'B', 'C')));
